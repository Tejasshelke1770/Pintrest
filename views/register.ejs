<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center bg-cover bg-top bg-[url(https://images.unsplash.com/photo-1567359781514-3b964e2b04d6?w=1000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8YWJzdHJhY3QlMjBwdXJwbGV8ZW58MHx8MHx8fDA%3D)]">
  <div class="w-96 h-[70vh] bg-white px-20 py-5 rounded-md">
    <h1
      class="font-semibold capitalize tracking-tighter text-2xl text-center mb-5"
    >
    Sign up to see more
    </h1>
    <form action="/register" method="post" >
        <input
        class="px-3 py-2 mb-3 rounded-lg block w-full border border-2 border-zinc-400"
        type="text"
        placeholder="username"
        name="username"
      />
        <input
        class="px-3 py-2 mb-3 rounded-lg block w-full border border-2 border-zinc-400"
        type="text"
        placeholder="email"
        name="email"
      />
        <input
        class="px-3 py-2 mb-3 rounded-lg block w-full border border-2 border-zinc-400"
        type="number"
        placeholder="contact"
        name="contact"
      />
      <input
        class="px-3 py-2 mb-2 rounded-lg border border-2 border-zinc-400 block w-full"
        type="password"
        placeholder="password"
        name="password"
      />
      <input
        class="text-center cursor-pointer mt-3 mb-2 rounded-full text-white bg-red-600 py-2 w-full block"
        type="submit" 
        value="Sign Up"
      />
    </form>
    <p class="text-xs text-center mb-2">
      By continuing, you agree to Pinterest's
      <a href="" class="font-semibold">Terms of Service</a> and acknowledge
      you've read our <a href="" class="font-semibold">Privacy Policy</a>.
      <a href="" class="font-semibold">Notice at collection</a>.
    </p>
    <hr />
    <p class="text-xs text-center mt-2">Already a member? <a href="/" class="font-semibold">Log in</a></p>
    <p class="text-xs text-cente mt-2">
      Are you a business? <a href="" class="font-semibold">Get started here!</a>
    </p>
  </div>
</div>
