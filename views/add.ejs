<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-800 px-10 py-5 text-white">
  <h1 class="text-xl">Create New Post</h1>
  <hr class="opacity-10 mt-3" />

  <form action="/createpost" method="post" enctype="multipart/form-data" >
    <input class="block rounded-md" type="file" name="postImage" id="" />
    <input
      class="block mt-4 w-1/3 text-black px-3 py-2 rounded-md border-2 rounded-md"
      type="text"
      placeholder="Title"
      name="title"
      id=""
    />
    <textarea
      class="block mt-4 w-1/3 text-black px-3 py-2 rounded-md border-2 rounded-md"
      type="text"
      name="description"
      placeholder="Description"
      >
    </textarea>
    <input class="w-1/3 bg-red-600 rounded-md py-2 mt-4" 
    value="Create Post"
    type="submit" />
  </form>
</div>
<% include ./partials/footer.ejs %>
