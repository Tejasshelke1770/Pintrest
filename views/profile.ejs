<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form class="uploadForm" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profile details flex flex-col items-center mt-20">
        <div class="relative">
            <span class="uploadIcon w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-700">
                <i class="text-white ri-pencil-line"></i>
            </span>
            <div  class="w-32 h-32 bg-zinc-200 rounded-full  overflow-hidden">
                <img class="w-full h-full object-cover " 
                src="/uploads/<%= user.profilePic %>"> 
            </div>
        </div>
        <h1 class="text-3xl font-semibold mt-4 "> <%=user.username  %></h1>       
        <div class="flex gap-7 mt-4">
            <a href="/edit" class="px-5  py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit Profile</a>
            <a href="/add" class="px-5 py-2 bg-red-500 rounded-full text-xs font-semibold">Add New Post</a>
        </div>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-5">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg  overflow-hidden">
                <% if (user.posts.length>0) { %>
                    <img 
                    class="object-cover w-full h-full"
                    src="/uploads/<%=user.posts[0].image %> " >
                <% } %>
                
            </div>
            <a href="/show/posts" class="text-xl font-semibold inline-block mt-3">Your Uploaded Pins</a>
            <h5 class="text-sm font-medium opacity-60"><%=user.posts.length%> pins</h5>
        </div>
    </div>
</div>

<script>
    document.querySelector(".uploadIcon").addEventListener('click',()=>{
        document.querySelector('.uploadForm input').click()
    })
    document.querySelector('.uploadForm input').addEventListener('change',()=>{
        document.querySelector('.uploadForm').submit();
    })
</script>
<% include ./partials/footer.ejs %>

