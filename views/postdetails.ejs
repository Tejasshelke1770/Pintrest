<% include ./partials/header %>
<div class="w-full h-screen px-10 bg-zinc-800 flex items-center justify-center">
  <div class="w-[55%] h-[70%] bg-zinc-500 rounded-lg flex  relative">
    <div class="w-[60%] h-full  p-2 image ">
      <img
        src="/uploads/<%=post.image%>"
        class="w-full h-full object-contain"
      />
    </div>
    <div class="details w-[40%] h-full  px-2 py-6">
      <% if (post.user.profilePic) { %>
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-white rounded-full overflow-hidden">
          <img
            src="/uploads/<%=post.user.profilePic%>"
            class="h-full w-full object-cover"
          />
        </div>
        <h3 class="text-xl text-white font-semibold">
          <%=post.user.username %>
        </h3>
      </div>
      <% } %>

      <h1 class="text-2xl font-semibold text-white capitalize mt-5">
        <%= post.title %>
      </h1>

      <h3 class="text-white text-sm text-pretty mt-5">
        <%=post.description  %>
      </h3>
    </div>
  <i class="fa-solid fa-x x  absolute text-2xl top-[1%] right-[2%] cursor-pointer text-white hover:text-zinc-300"></i>
  </div>
</div>

<script>
    document.querySelector('.x').addEventListener('click', ()=>{
        window.location.href = '/show/posts';
    })
</script>

<% include ./partials/footer %>
