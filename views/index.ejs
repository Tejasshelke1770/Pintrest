    <h1
      class="font-semibold capitalize tracking-tighter text-2xl text-center mb-3"
    >
      Welcome to pintrest
    </h1>
    <form action="/login" method="post">
      <input
        class="px-3 py-2 mb-3 rounded-lg block w-full border border-2 border-zinc-400"
        type="text"
        placeholder="username"
        name="username"
      />
      <input
        class="px-3 py-2 mb-2 rounded-lg border border-2 border-zinc-400 block w-full"
        type="password"
        placeholder="password"
        name="password"
      />
      <a href="" class="font-semibold text-zinc-500 capitalize text-sm"
        >Forgot your password?</a
      >
      <input
        class="text-center cursor-pointer mt-2 mb-2 rounded-full text-white bg-red-600 py-2 w-full block"
        type="submit" 
        value="Login"
      />
    </form>
